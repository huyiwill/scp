								});
							}
							
							var btn = document.getElementById('cpoy_exam_url');
							var clipboard = new Clipboard(btn);
							//复制成功执行的回调，可选
							clipboard.on('success', function(e) {
								layer.msg('复制成功');
							});
							//复制失败执行的回调，可选
							clipboard.on('error', function(e) {
								layer.msg('复制失败');
