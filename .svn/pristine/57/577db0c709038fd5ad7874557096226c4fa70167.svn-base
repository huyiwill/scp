										tzurl = info.url;
									}else{
										layer.msg(info.msg);
									}
								}
							});
						},
						end : function(){
							/*
							ue1.destroy();
							if(info.organInfo.level == 4){
								ue2.destroy();
								ue3.destroy();
								ue4.destroy();
							}
							*/
							if(isupload){
								location.href = tzurl;
							}
						}
					})
				}else{
					layer.msg(info.msg);
				}
			}
		});
	})
	
	function escape2Html(str) {
		var arrEntities={'lt':'<','gt':'>','nbsp':' ','amp':'&','quot':'"'};
		return str.replace(/&(lt|gt|nbsp|amp|quot);/ig,function(all,t){return arrEntities[t];});
	}
	
	function operateAjax(_href){
		$.ajax({
			url: _href + "?time="+Math.random(),
			type: "get",
			success: function (info) {
				if (info.code === 1) {
					setTimeout(function () {
						location.href = info.url;
					}, 1000);
				}
				layer.msg(info.msg);
			}
		});
	}
	
	
	$('.ajax-delete2').on('click', function () {
		var _href = $(this).attr('data-href');
		layer.open({
			shade: false,
			title: '提示',
			content: '删除后题集无法恢复',
			btn: ['确定', '取消'],
			yes: function (index) {
				operateAjax(_href);
				layer.close(index);
			}
		});

		return false;
	});
	
	$('.using').on('click', function () {
		var _href = $(this).attr('data-href');
		operateAjax(_href);
	});
	
	$('.nonuse').on('click', function () {
		var _href = $(this).attr('data-href');
		operateAjax(_href);
	});
