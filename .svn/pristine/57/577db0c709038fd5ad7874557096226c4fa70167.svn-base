					layer.open({
						type: 1,
						title: '题集设置',
						content: html,
						btn: ['确认','关闭'],
						area: ['700px', h],
						success: function(layero, index){
							form.render();
							ue1 = new UE.ui.Editor();
							ue1.render(textId1); //UE.getEditor(textId1);
							ue1.ready(function() {
								ue1.setHeight(250);
								if(info.organInfo.level < 3){
